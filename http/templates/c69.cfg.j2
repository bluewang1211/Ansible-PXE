install

# System authorization information
authconfig --enableshadow --passalgo=sha512

# Use Network installation
url --url=http://{{ pxe_host_ip }}/centos69/
repo --name="CentOS"  --baseurl=http://{{ pxe_host_ip }}/centos69/ --cost=100

# Use text install
text

# Keyboard layouts
keyboard us

# System language
lang en_US.UTF-8

# Network information
network --onboot yes --device eth0 --bootproto dhcp --noipv6

# Root password
rootpw  --iscrypted $6$EWXZhDlthCo/Xi9.$/DPOL00C4fxdl5paoQ0f5xhVAcj4lkCW.uO8TyUMl5vD8PRq7pOSstqhEIu8q1XeZe0ckannr465v9jo3pzXA.

# System timezone
timezone --utc Asia/Taipei

# System services
services --disabled="chronyd,NetworkManager,postfix,kdump,iptables,ip6tables"
services --enabled="network"

selinux --disabled

# System bootloader configuration
bootloader --location=mbr --driveorder={{ disk_type }} --append="crashkernel=auto"

# Partition clearing information
clearpart --all
zerombr

%pre
# Disk partitioning information
echo "part / --fstype="ext4" --ondisk={{ disk_type }} --size=$(cat /proc/partitions | grep {{ disk_type }} | head -n 1 | awk '{print $3/1024-4096}')" >> /tmp/disk.cfg
echo "part swap --fstype="swap" --ondisk={{ disk_type }} --size=4095" >> /tmp/disk.cfg

%end

%include /tmp/disk.cfg

%packages
@core
@server-policy
@workstation-policy
bind-utils
vim
gcc
nc
lrzsz
lsof
telnet
mtr
ntpdate
nfs-utils
openssh-clients
net-tools
rsync
wget
iotop
sysstat
tcpdump
traceroute
man

%end

%post
chkconfig rpcbind off
echo "vm.swappiness = 1" >> /etc/sysctl.conf
echo "vm.overcommit_memory = 1" >> /etc/sysctl.conf
echo "net.ipv6.conf.all.disable_ipv6 = 1" >> /etc/sysctl.conf
